<p id="notice"><%= notice %></p>

<h1>Borrowers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Street</th>
      <th>State</th>
      <th>Zip</th>
      <th>Company name</th>
      <th>Employer street</th>
      <th>Employer state</th>
      <th>Employer zip</th>
      <th>Current position</th>
      <th>Start date</th>
      <th>Salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrowers.each do |borrower| %>
      <tr>
        <td><%= borrower.first_name %></td>
        <td><%= borrower.last_name %></td>
        <td><%= borrower.email %></td>
        <td><%= borrower.phone %></td>
        <td><%= borrower.street %></td>
        <td><%= borrower.state %></td>
        <td><%= borrower.zip %></td>
        <td><%= borrower.company_name %></td>
        <td><%= borrower.employer_street %></td>
        <td><%= borrower.employer_state %></td>
        <td><%= borrower.employer_zip %></td>
        <td><%= borrower.current_position %></td>
        <td><%= borrower.start_date %></td>
        <td><%= borrower.salary %></td>
        <td><%= link_to 'Show', borrower %></td>
        <td><%= link_to 'Edit', edit_borrower_path(borrower) %></td>
        <td><%= link_to 'Destroy', borrower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

