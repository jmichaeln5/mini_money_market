<%= form_for(:lender, url: registration_path(:lender)) do |f| %>
  <%#= devise_error_messages! %>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br/>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
      </div>

      <div class="field">
        <%= f.label :phone %>
        <%= f.number_field :phone, id: :lender_phone %>
      </div>

      <div class="field">
        <%= f.label :street %>
        <%= f.text_field :street, id: :lender_street %>
      </div>

      <div class="field">
        <%= f.label :state %>
        <%= f.text_field :state, id: :lender_state %>
      </div>

      <div class="field">
        <%= f.label :zip %>
        <%= f.number_field :zip, id: :lender_zip %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder:"password"%>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"password confirmation"%>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-success btn-primary"%>
      </div>
  </div>
<% end %>
