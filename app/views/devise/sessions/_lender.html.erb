<%= form_for(:lender, url: session_path(:lender)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Lender's Email"%>
  </div>
  <br>
  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder:"Lender's Password"%>
  </div>
  <br>
  <% if devise_mapping_lender.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
  <br>
  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-success btn-block"%>
  </div>
<% end %>
