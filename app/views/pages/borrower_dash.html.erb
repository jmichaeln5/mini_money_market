  <div class="field">
    <%= form.label :start_date %>
    <%= form.text_field :start_date, id: :borrower_start_date %>
  </div>

  <div class="field">
    <%= form.label :salary %>
    <%= form.number_field :salary, id: :borrower_salary %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit "Submit", class:"btn btn-primary" %>
  </div>
<% end %>

